@page 
@model IndividualProject.Pages.LoginPageModel

@{
    Layout = "LayoutLogin";
}

<div class="main">
    <input type="checkbox" id="chk" aria-hidden="true">

    <div class="signup">
        <form method="post" asp-page="LoginPage">
            <label for="chk" aria-hidden="true">Sign up</label>
            <input type="text" asp-for="@Model.user.Username" asp-page-handler="Button1" name="username" placeholder="User name" required="">
            <input type="email" asp-for="@Model.user.Email" asp-page-handler="Button1" name="email" placeholder="Email" required="">
            <input type="password" asp-for="@Model.user.Password" asp-page-handler="Button1" name="pswd" placeholder="Password" required="">
            <input type="submit" value="Sign up" asp-page-handler="Button1" />
            @*<button type="submit">Sign up</button>*@


        </form>
    </div>

    <div class="login">
        <form method="post" asp-page="LoginPage">
            <label for="chk" aria-hidden="true">Login</label>
            <input type="email" asp-for="@Model.user.Email" asp-page-handler="Button2" name="email" placeholder="Email" required="">
            <input type="password" asp-for="@Model.user.Password" asp-page-handler="Button2" name="pswd" placeholder="Password" required="">
            <input type="submit" value="Log in" asp-page-handler="Button2" />
    @*<button type="submit">Login</button>*@
    </form>
</div>
</div>