<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <title>@ViewData["Title"] - IndividualProject</title>
    <link rel="stylesheet" href="/css/my.css" />

</head>
<body>
    <header>
        <ul>
            @if (!User.Identity.IsAuthenticated)
            {
                <li><a asp-area="" asp-page="/Index">Home</a></li>
                <li><a asp-area="" asp-page="/IdeationDocument">IdeationDocument</a></li>
            }
            else
            {
                <li><a asp-area="" asp-page="/Store">Store</a></li>
                <li><a asp-area="" asp-page="/BusinessPage">Just for business</a></li>
                <li><a asp-area="" asp-page="/OurSellers">Admin view</a></li>
                <li>
                    <a asp-area="" asp-page="/Logout">Logout</a>
                </li>
            }
        </ul>

    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - IndividualProject - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!--<script src="~/js/site.js" asp-append-version="true"></script> -->

    @await RenderSectionAsync("Scripts", required: false)
   
</body>
</html>
